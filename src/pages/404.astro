---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Pagina no encontrada">
  <main
    class="w-full h-screen bg-indigo-300 flex flex-col justify-center items-center"
  >
    <div class="flex flex-col items-center gap-2">
      <p class="font-bold text-9xl text-indigo-500">404</p>
      <p class="font-bold text-7xl text-indigo-500">Pagina no encontrada</p>
      <p class="font-bold text-7xl text-indigo-500">
        Â¡Que pasa maquina, estas perdido!
      </p>
    </div>
    <button
      id="404_button_back"
      class="bg-indigo-500 rounded text-white font-bold px-3 py-1 mt-10 hover:bg-indigo-700 xsm:w-full md:w-2/5 xl:w-1/4 xl:text-3xl xl:py-2"
      >Regresar</button
    >
  </main>
</Layout>

<script>
  const buttonBack = document.getElementById("404_button_back");

  buttonBack?.addEventListener("click", () => {
    window.history.back();
  });
</script>
